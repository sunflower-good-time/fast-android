<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/txt_http"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="网络请求" />

            <Button
                android:id="@+id/txt_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试flow" />


            <Button
                android:id="@+id/txt_stateflow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StateFlow" />


            <Button
                android:id="@+id/txt_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击动画" />
        </LinearLayout>

        <View
            android:id="@+id/animation_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/animation_view1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/animation_view2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/animation_view3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/animation_view4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/animation_view5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:id="@+id/animation_view6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
